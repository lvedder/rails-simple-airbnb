<div class="flex-container">
  <div class="row">
    <h1 class= "text-center">Find your flat</h1>
    <% @flats.each do |flat| %>
    <div class="card col-xs-6 col-md-4">
      <h3 class="card-title"><strong><%= flat.name %></strong></h3>
       <p class="card-text"><strong>Address: </strong><%= flat.address %></p>
       <p class="card-text"><strong>Description: </strong><%= flat.description %></p>
       <p class="card-text"><strong>Price per night: </strong><%= flat.price_per_night %></p>
       <p class="card-text"><strong>Number of guests: </strong><%= flat.number_of_guests %></p>
       <div class="flats-link">
       <%= link_to "Details", flat_path(flat), style: "font-size: 12px;" %>
       </div>
    </div>
    <% end %>
  </div>
</div>
